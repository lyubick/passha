<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="org.kgbt.passha.android.VaultActivity">

    <android.support.design.widget.TextInputLayout
            android:layout_width="344dp"
            android:layout_height="495dp" android:layout_weight="1" tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/pwd_filter_hint" android:inputType="text" android:id="@+id/filter_field"/>
        <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent" tools:layout_editor_absoluteY="8dp"
                tools:layout_editor_absoluteX="8dp"
                android:id="@+id/password_list" android:layout_weight="1"/>
    </android.support.design.widget.TextInputLayout>
</android.support.constraint.ConstraintLayout>

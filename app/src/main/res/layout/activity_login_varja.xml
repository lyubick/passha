<?xml version="1.0" encoding="utf-8"?>
<!-- Login screen -->
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/login_scree"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:background="@drawable/activity_login_varja"
>

    <View
            android:id="@+id/b_rectangle_login"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="122dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="246dp"
            android:background="@drawable/b_rectangle_login"
    />
    <TextView
            android:id="@+id/b_login_text"
            android:layout_width="88dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="134dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="246dp"
            android:text="@string/b_login_text"
            android:textAppearance="@style/b_login_text"
            android:gravity="center_horizontal|center_vertical"
    />

    <View
            android:id="@+id/tf_password"
            android:layout_width="275dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="43dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="161dp"
            android:background="@drawable/tf_password"
    />
    <EditText
            android:id="@+id/et_password"
            android:layout_width="275dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:text="@string/password"
            android:textAppearance="@style/password"
            android:gravity="top"
            android:autofillHints="" android:inputType="textPassword" tools:ignore="LabelFor"/>

</RelativeLayout>